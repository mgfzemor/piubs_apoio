<table class="table table-hover .table-striped">
  <thead>
    <tr>
      <th>Data</th>
      <th>Categoria</th>
      <th>Resposta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.data %></td>
        <td><%= answer.categoria %></td>
        <td><%= answer.resposta %></td>
        <td><%= link_to 'Visualizar', answer, class: 'btn btn-success',style: 'color: white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
