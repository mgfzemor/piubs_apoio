<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Categoria</th>
      <th>Colaborador</th>
      <th>Pergunta</th>
      <th>Resposta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.data %></td>
        <td><%= answer.categoria %></td>
        <td><%= answer.colaborador %></td>
        <td><%= answer.pergunta %></td>
        <td><%= answer.resposta %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
