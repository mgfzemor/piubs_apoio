<table class="table table-hover .table-striped">
  <thead>
    <tr>
      <th><%= t :data %></th>
      <th><%= t :category %></th>
      <th><%= t :answer %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <% if answer.pergunta != 'default'%>
        <tr>
          <td><%= answer.data %></td>
          <td><%= answer.resposta %></td>
          <td><%= link_to t(:associate_answer), "/call/associate/#{answer.id}/#{@call.id}", class: 'btn btn-success',style: 'color: white' %></td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
