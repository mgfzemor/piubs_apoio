
<%= simple_form_for(@call) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :titulo %>
    <%= f.input :pergunta %>
    <%= f.input :versao %>
    <%= f.input :perfil_acesso, label: "Perfil de acesso" %>
    <%= f.input :detalhe_funcionalidade %>
    <%= f.input :severidade %>
    <%= f.input :municipio, label: "MunicÃ­pio" %>
    <%= f.input :uf, label: "UF" %>
    <div class="form-group"
      <label for="select-categoria"><b>Categoria</b></label>
      <%= f.select :categoria_id, ['Hardware', 'Software'], {include_blank: "Selecione uma categoria: "}, id: "select-categoria", class: "form-control"%>
    </div>
    <%= f.input :sei %>

<!--<%= f.collection_select(:answer_id, @answers, :id, :resposta, {include_blank: "Selecione uma resposta: "}) %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Cadastrar' ,class: 'btn btn-success btn-sm', style: 'color: white'  %>
    <%= link_to 'Voltar', calls_path, class: 'btn btn-success btn-sm', style: 'color: white'  %>
  </div>
<% end %>
