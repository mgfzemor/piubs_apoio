<p id="notice"><%= notice %></p>

<h1>FAQ</h1>

<table class="table table-hover .table-striped">
  <thead>
    <tr>
      <th><%= t :data %></th>
      <th><%= t :category %></th>
      <th><%= t :call %></th>
      <th><%= t :answer %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <% if answer.pergunta != 'default'%>
        <tr>
          <td><%= answer.data %></td>
          <td><%= answer.categoria %></td>
          <td><%= answer.pergunta %></td>
          <td><%= answer.resposta %></td>
          <td><%= link_to t(:view), answer, class: 'btn btn-success btn-sm', style: 'color: white' %></td>
          <td><%= link_to t(:edit), edit_answer_path(answer),class: 'btn btn-success btn-sm', style: 'color: white' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
