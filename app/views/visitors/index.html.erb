<div style="text-align: center">
<h3><%= t :main_title %></h3>
<p><%= t :attendance %>s: <span class="badge badge-warning"><%= Call.count %></span>   <%= t :registered %></p>
<p> <%= "Usuário atual: #{current_user.name || current_user.email}" if current_user %></p>
<br>
<%= image_tag("piubs.jpg", :alt => "PIUBS") %>
<br/>
<style>
.inner {
width:  40%;
margin: 0 auto;
}
</style>
<%= form_tag(call_search_path, remote: false, :method => :get ) do %>
<div class="row" style="text-align: center">
  <div class="inner">
      <div class="input-group">
        <input type="number" id="id" name="id" class="form-control" placeholder="Nº do protocolo">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit" ><%= t :search %></button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->
  <% end %>
</div>
